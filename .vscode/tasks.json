{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build",
			"command": "g++",
			"args": [
				"-std=c++17",
				"-Iinclude",
				"-Isrc/dynamics",
				"src/*.cc",
				"-o",
				"bin/game.exe",
				"lib/libopenal32.a",
				"lib/libsfml-audio.a",
				"lib/libsfml-graphics.a",
				"lib/libsfml-window.a",
				"lib/libsfml-system.a",
				"lib/libsfml-main.a",
				"lib/libsfml-network.a"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}